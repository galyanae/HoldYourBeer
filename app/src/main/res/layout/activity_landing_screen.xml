<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
   >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="202dp"
        android:layout_height="126dp"
        app:srcCompat="@drawable/home_screen_03"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />


    <Button
        android:id="@+id/btn_play_now"
        android:layout_width="268dp"
        android:layout_height="64dp"
        android:background="@drawable/play"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_play_now"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp">


        <Button
            android:id="@+id/btn_about"
            android:layout_width="128dp"
            android:layout_height="29dp"


            android:layout_marginLeft="46dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ctacopy_2"></Button>

        <Button
            android:id="@+id/btn_instructions"
            android:layout_width="128dp"
            android:layout_height="29dp"


            android:background="@drawable/ctacopy"></Button>

    </LinearLayout>


</RelativeLayout>
